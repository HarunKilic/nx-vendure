{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "Plugin",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the plugin",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "withUi": {
      "type": "boolean",
      "description": "Adds UI for admin-ui",
      "$default": false
    }
  },
  "required": ["name"]
}
